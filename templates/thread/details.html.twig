{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<header>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="/register">Register</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/login">LogIn</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/thread">Threads</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<div class="example-wrapper">
			<div class="card">
				<div class="card-header">
					{{thread.title}}
				</div>
				<div class="card-body">
					<blockquote class="blockquote mb-0">
						<p>{{thread.body}}</p>
					</blockquote>
				</div>
			</div>
		</div>
	</div>




	{{ form_start(form) }}
	<div class="container">
		<div class="example-wrapper">
			<div class="mb-3">
				{{ form_errors(form.body) }}
				<label for="exampleFormControlTextarea1" class="form-label">Response</label>
				{{ form_widget(form.body, {'attr':{'class': 'form-control', 'id': 'exampleFormControlTextarea1', 'rows' : '3'}}
				)}}
			</div>
			<button type="submit" class="btn btn-primary">Send your response</button>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
