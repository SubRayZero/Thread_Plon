{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<header>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="/home">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/register">Register</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_profil_thread') }}">Profil</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">LogIn</a>
							</li>
						{% endif %}
						<li class="nav-item">
							<a class="nav-link" href="/thread">Threads</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<div class="example-wrapper">
			<div class="card">
				<div class="card-header">
					{{thread.title}}
				</div>
				<div class="card-body">
					<blockquote class="blockquote mb-0">
						<p>{{thread.body}}</p>
					</blockquote>
				</div>
			</div>
			<form action="{{ path('app_thread_like', {'id': thread.id}) }}" method="POST">
				<input type="hidden" name="vote" value="1">
				<button type="submit" class="btn btn-primary">Like</button>
			</form>


		</div>
	</div>

	<div class="container">
		<div class="example-wrapper">
			{% if thread.voteId is not empty %}
				<ul>
					{% for vote in thread.voteId %}
						<li>{{ vote }}</li>
					{% endfor %}
				</ul>
			{% else %}
				<p>No vote</p>
			{% endif %}
		</div>
	</div>

	<div class="container">
		<div class="example-wrapper">
			{% if thread.responseId is not empty %}
				{% for response in thread.responseId %}
					<div class="card mb-3">
						<div class="card-header">
							Response
						</div>
						<div class="card-body">
							<blockquote class="blockquote mb-0">
								<p>{{ response.body }}</p>
							</blockquote>
						</div>
					</div>
				{% endfor %}
			{% else %}
				<div class="card">
					<div class="card-header">
						No responses
					</div>
				</div>
			{% endif %}
		</div>
	</div>


	{{ form_start(form) }}
	<div class="container">
		<div class="example-wrapper">
			<div class="mb-3">
				{{ form_errors(form.body) }}
				<label for="exampleFormControlTextarea1" class="form-label">Response</label>
				{{ form_widget(form.body, {'attr':{'class': 'form-control', 'id': 'exampleFormControlTextarea1', 'rows' : '3'}}
				)}}
			</div>
			<button type="submit" class="btn btn-primary">Send your response</button>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
