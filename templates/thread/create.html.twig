{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<header>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="/home">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_profil_thread') }}">Profil</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	{{ form_start(threadForm) }}
	{{ form_errors(threadForm) }}
	<div class="container">
		<div class="example-wrapper">
			<h1>New Thread</h1>
			<div class="mb-3">
				{{ form_errors(threadForm.title) }}
				<label for="exampleInputText1" class="form-label">Title</label>
				{{ form_widget(threadForm.title, {'attr': {'class': 'form-control', 'id': 'exampleInputText1'}}) }}
			</div>

			<div class="mb-3">
				{{ form_errors(threadForm.description) }}
				<label for="exampleInputText1" class="form-label">Description</label>
				{{ form_widget(threadForm.description, {'attr': {'class': 'form-control', 'id': 'exampleInputText1'}}) }}
			</div>

			<div class="mb-3">
				{{ form_errors(threadForm.body) }}
				<label for="exampleFormControlTextarea1" class="form-label">Body</label>
				{{ form_widget(threadForm.body, {'attr':{'class': 'form-control', 'id': 'exampleFormControlTextarea1', 'rows' : '3'}}
				)}}
			</div>

			<div class="mb-3 form-check">
				<label class="form-check-label" for="exampleCheck1">Category</label>
				{{ form_widget(threadForm.category_id, {'id': 'exampleCheck1', 'class': 'form-check-input'}) }}
			</div>

			<button type="submit" class="btn btn-primary">Validation</button>
		</div>
	</div>
	{{ form_end(threadForm) }}

{% endblock %}
