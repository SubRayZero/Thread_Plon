{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}


	<header>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="/register">Register</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_profil_thread') }}">Profil</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">LogIn</a>
							</li>
						{% endif %}
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="/logout">Logout</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	{% for thread in threads %}
		<div class="container">
			<div class="example-wrapper">


				<div class="card">
					<h5 class="card-header">{{ thread.CreatedAt | date("m/d/y")}}</h5>
					<div class="card-body">
						<h5 class="card-title">
							{{thread.title}}
						</h5>
						<p class="card-text">{{thread.description}}</p>
						<a class="btn btn-primary" href="{{ path('app_home_details', {'id': thread.id}) }}">Show Details</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
